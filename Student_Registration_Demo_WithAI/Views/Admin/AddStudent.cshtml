@model Student

<div class="container mt-4">
    <!-- Page Header -->
    <div class="text-center">
        <h2>Yeni Öğrenci Ekle</h2>
    </div>

    <!-- Add Student Form -->
    <form asp-action="AddStudent" method="post" class="mt-4">
        <div class="form-group">
            <label for="FirstName">Ad:</label>
            <input asp-for="FirstName" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="LastName">Soyad:</label>
            <input asp-for="LastName" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="Email">Email:</label>
            <input asp-for="Email" type="email" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="PasswordHash">Şifre:</label>
            <input asp-for="PasswordHash" type="password" class="form-control" required />
        </div>

        <!-- Enrollment Date -->
        <div class="form-group">
            <label for="EnrollmentDate">Kayıt Tarihi:</label>
            <input asp-for="EnrollmentDate" type="date" class="form-control" required />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-action="Students" class="btn btn-secondary">Geri Dön</a>
        </div>
    </form>
</div>
