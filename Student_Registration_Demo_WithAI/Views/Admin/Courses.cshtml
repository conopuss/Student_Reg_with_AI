@model List<Course>

<div class="container mt-4">
    <!-- Page Header -->
    <div class="text-center">
        <h2>Ders Yönetimi</h2>
    </div>

    <!-- Add New Course Button -->
    <div class="text-end mb-3">
        <a asp-action="AddCourse" class="btn btn-success">Yeni Ders Ekle</a>
    </div>

    <!-- Courses Table -->
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Ders Adı</th>
                <th>Kredi</th>
                <th>Öğretmen</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseName</td>
                    <td>@course.Credits</td>
                    <td>@course.InstructorName</td>
                    <td>
                        <a asp-action="EditCourse" asp-route-id="@course.CourseID" class="btn btn-primary">Düzenle</a>
                        <a asp-action="DeleteCourse" asp-route-id="@course.CourseID" class="btn btn-danger"
                           onclick="return confirm('Bu dersi silmek istediğinizden emin misiniz?');">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Yönetici Paneline Dön</a>
    </div>
</div>
