@model Student

<p>Student ID: @Model.StudentID</p>
<div class="container mt-4">
    <!-- Page Header -->
    <div class="card text-center mt-4">
        <div class="card-body">
            <h2 class="card-title">Öğrenciyi Düzenle</h2>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info mt-4" role="alert">
            @TempData["Message"]
        </div>
    }

    <!-- Edit Student Form -->
    <form asp-action="EditStudent" method="post" class="mt-4">
        <!-- Hidden Field for StudentID -->
        <input asp-for="StudentID" type="hidden" />

        <div class="form-group">
            <label asp-for="FirstName">Ad:</label>
            <input asp-for="FirstName" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="LastName">Soyad:</label>
            <input asp-for="LastName" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" type="email" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="PasswordHash">Şifre:</label>
            <input asp-for="PasswordHash" type="password" class="form-control" required />
        </div>

        <!-- Edit Student Registrations Button -->
        <a asp-action="EditStudentRegistrations" asp-route-id="@Model.StudentID" class="btn btn-success">Ders Ekle</a>

        <!-- Form Buttons -->
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a asp-action="Students" class="btn btn-secondary" onclick="return confirm('Kaydedilmemiş değişiklikler kaybolacak. Devam etmek istiyor musunuz?');">Geri Dön</a>
        </div>
    </form>
</div>
