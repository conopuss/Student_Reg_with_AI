@model List<Student_Registration_Demo_WithAI.Models.Course>

<h2>Mevcut Dersler</h2>

<!-- Success Message -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<!-- Back to Index Button -->
<a asp-action="Index" class="btn btn-secondary mb-3">Ana Sayfaya Dön</a>

<!-- Courses Table -->
<form asp-action="RegisterCourse" method="post">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Ders Adı</th>
                <th>Kredi</th>
                <th>Öğretmen</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseName</td>
                    <td>@course.Credits</td>
                    <td>@course.InstructorName</td>
                    <td>
                        <!-- Register Button -->
                        <button type="submit" name="courseID" value="@course.CourseID" class="btn btn-primary">Kaydol</button>
                        <!-- Details Button -->
                        <a asp-action="CourseDetails" asp-route-id="@course.CourseID" class="btn btn-info">Detaylar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
